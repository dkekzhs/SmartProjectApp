<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">

    <androidx.cardview.widget.CardView
        android:id="@+id/workcount"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:layout_weight="0.333"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/txtwork"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtWork"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal"
            android:text="현재 걸음 수"
            android:textColor="@color/black"
            android:textSize="36sp" />
    </androidx.cardview.widget.CardView>

    <com.dinuscxj.progressbar.CircleProgressBar
        android:id="@+id/cpb_circlebar1"
        android:layout_width="326dp"
        android:layout_height="380dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        app:progress_end_color="#ABF200"
        app:progress_start_color="#FFBB00"
        app:progress_stroke_cap="round"
        app:progress_stroke_width="20dp "
        app:progress_text_size="50sp"
        app:style="solid_line" />


</LinearLayout>