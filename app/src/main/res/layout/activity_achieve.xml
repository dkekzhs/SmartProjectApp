</LinearLayout>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
android:id="@+id/Ach1Card3"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="0.333"
app:cardCornerRadius="8dp"
